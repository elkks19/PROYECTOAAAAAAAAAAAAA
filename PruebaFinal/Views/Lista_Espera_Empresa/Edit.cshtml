            </div>
            <div class="form-group">
                <label asp-for="fechaSolicitudRevision" class="control-label"></label>
                <input asp-for="fechaSolicitudRevision" class="form-control" />
                <span asp-validation-for="fechaSolicitudRevision" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="codEmpresa" />
            <input type="hidden" asp-for="codAdmin" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
