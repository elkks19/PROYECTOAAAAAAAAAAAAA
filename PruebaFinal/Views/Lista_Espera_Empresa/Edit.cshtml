@model PruebaFinal.Models.Lista_Espera_Empresa

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Lista_Espera_Empresa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isRevisado" /> @Html.DisplayNameFor(model => model.isRevisado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="fechaRevision" class="control-label"></label>
                <input asp-for="fechaRevision" class="form-control" />
